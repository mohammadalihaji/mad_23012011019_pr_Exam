<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5FF"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Banner / Hero Image -->
            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#222222"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="16dp" />

            <!-- Conference Info Card -->
            <LinearLayout
                android:id="@+id/cardConference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:clipToOutline="true"
                android:backgroundTintMode="src_over">

                <TextView
                    android:id="@+id/tvConferenceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tech Conference 2025"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mehsana, Gujarat | 2.5 km away"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join us for a deep dive into the future of technology."
                    android:textColor="#666666"
                    android:layout_marginTop="8dp" />

                <!-- Live Updates Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#FF0000"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvLiveUpdates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live Updates Active"
                        android:textColor="#00AA44"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- Featured Speakers -->
            <TextView
                android:id="@+id/tvFeaturedSpeakers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured Speakers"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Speaker 1 -->
                    <LinearLayout
                        android:id="@+id/cardSpeaker1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher_round" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Emily Chen"
                            android:textStyle="bold"
                            android:textColor="#111111"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Researcher"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <!-- Speaker 2 -->
                    <LinearLayout
                        android:id="@+id/cardSpeaker2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher_round" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jake Wharton"
                            android:textStyle="bold"
                            android:textColor="#111111"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android GDE"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <!-- Speaker 3 -->
                    <LinearLayout
                        android:id="@+id/cardSpeaker3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@android:color/white"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher_round" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sarah Connor"
                            android:textStyle="bold"
                            android:textColor="#111111"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Security Expert"
                            android:textColor="#666666" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Schedule header + theme toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvSchedule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Schedule"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111111" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Filter buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ALL" />

                <Button
                    android:id="@+id/btnFilterKeynote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KEYNOTE"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnFilterWorkshop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WORKSHOP"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnFilterNetworking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NETWORKING"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Schedule cards (static) -->
            <!-- Opening Ceremony (ALL) -->
            <LinearLayout
                android:id="@+id/cardOpening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00 AM"
                    android:textStyle="bold"
                    android:textColor="#9C27B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opening Ceremony"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALL"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- The Future of AI (KEYNOTE) -->
            <LinearLayout
                android:id="@+id/cardFutureAI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:textStyle="bold"
                    android:textColor="#9C27B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Future of AI"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEYNOTE"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Kotlin Multiplatform (WORKSHOP) -->
            <LinearLayout
                android:id="@+id/cardKotlinMulti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30 AM"
                    android:textStyle="bold"
                    android:textColor="#9C27B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kotlin Multiplatform"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WORKSHOP"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Lunch & Connect (NETWORKING) -->
            <LinearLayout
                android:id="@+id/cardLunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:00 PM"
                    android:textStyle="bold"
                    android:textColor="#9C27B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch &amp; Connect"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NETWORKING"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Cloud Scalability (WORKSHOP) -->
            <LinearLayout
                android:id="@+id/cardCloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:30 PM"
                    android:textStyle="bold"
                    android:textColor="#9C27B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloud Scalability"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WORKSHOP"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Reviews header -->
            <TextView
                android:id="@+id/tvReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <!-- Review 1 -->
            <LinearLayout
                android:id="@+id/cardReview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alice Johnson"
                        android:textStyle="bold"
                        android:textColor="#111111" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★★★★★"
                        android:textColor="#FFC107" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Great event! Well-organized."
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>

            <!-- Review 2 -->
            <LinearLayout
                android:id="@+id/cardReview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bob Smith"
                        android:textStyle="bold"
                        android:textColor="#111111" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★★★★☆"
                        android:textColor="#FFC107" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loved the keynote!"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>

            <!-- Review 3 -->
            <LinearLayout
                android:id="@+id/cardReview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charlie Davis"
                        android:textStyle="bold"
                        android:textColor="#111111" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★★★☆☆"
                        android:textColor="#FFC107" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workshops were crowded."
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnBuyTickets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buy Tickets" />

                <Button
                    android:id="@+id/btnCalendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calendar"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
